<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lutec.august.streetwiseandroidapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:label="VendorPage" >
        </activity>
        <activity
            android:name=".StreetwiseMainPageWebView"
            android:label="Streetwise Homepage" >
        </activity>
        <activity
            android:name=".FacebookView"
            android:label="Streetwise Facebook" >
        </activity>
        <activity
            android:name=".TwitterView"
            android:label="Streetwise Twitter" >
        </activity>
    </application>

</manifest>
